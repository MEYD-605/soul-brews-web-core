---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/navbar';
import Footer from '../components/footer';
import FloatingButtons from '../components/floating-buttons';
import '../styles/globals.css';

const title = "Bo's Favorite Gear | ClubsxAI";
const description = "A curated list of photography gear, creator tools, and lifestyle picks";

const categories = [
  { id: "photography", name: "Photography", icon: "üì∏" },
  { id: "tech", name: "Tech & Creator Tools", icon: "üíª" },
  { id: "bartending", name: "Bartending", icon: "üç∏" },
  { id: "lifestyle", name: "Lifestyle", icon: "‚≠ê" },
];

const photographyGear = [
  { name: "Sony Alpha a7 III", description: "Full-frame mirrorless camera with exceptional low-light performance", price: "‡∏ø69,990" },
  { name: "Sony 85mm f/1.4 GM", description: "Premium portrait lens with beautiful bokeh and sharpness", price: "‡∏ø42,990" },
  { name: "Godox AD200Pro", description: "Versatile portable flash for on-location lighting", price: "‡∏ø12,900" },
];

const techGear = [
  { name: "MacBook Pro M2", description: "Powerful laptop for photo editing and creative work", price: "‡∏ø59,900" },
  { name: "Adobe Creative Cloud", description: "Essential software suite for creative professionals", price: "‡∏ø1,890/month" },
  { name: "WD My Passport SSD 2TB", description: "Fast, portable storage for backing up your creative work", price: "‡∏ø9,900" },
];

const bartendingGear = [
  { name: "Professional Boston Shaker", description: "High-quality stainless steel shaker for cocktail mixing", price: "‡∏ø1,800" },
  { name: "Japanese Jigger", description: "Precision measuring tool for perfect cocktail proportions", price: "‡∏ø850" },
  { name: "Cocktail Recipe Book", description: "Comprehensive guide to classic and modern cocktails", price: "‡∏ø1,200" },
];
---

<BaseLayout>
    <Navbar client:load />
    
    <main class="min-h-screen pt-16 md:pt-20">
      <!-- Hero Section -->
      <section class="section-padding gradient-mesh">
        <div class="container mx-auto container-narrow text-center">
          <div class="inline-block px-4 py-2 rounded-full mb-6 font-medium" style="background: rgba(255,107,53,0.1); color: #FF6B35;">
            Curated Recommendations
          </div>
          <h1 class="text-display-lg mb-6">Bo's Favorite Gear</h1>
          <p class="text-body-lg mb-8">
            A handpicked selection of tools and equipment I personally use and recommend
          </p>
          <div class="flex flex-wrap justify-center gap-3">
            {categories.map((category) => (
              <a 
                href={`#${category.id}`}
                class="inline-flex items-center px-4 py-2 rounded-full transition-all hover-lift glass"
              >
                <span class="mr-2">{category.icon}</span>
                <span>{category.name}</span>
              </a>
            ))}
          </div>
        </div>
      </section>

      <!-- Affiliate Disclosure -->
      <section class="py-8" style="background: rgba(255,107,53,0.1);">
        <div class="container mx-auto px-4">
          <div class="max-w-3xl mx-auto text-center">
            <p class="text-body text-sm">
              <strong>Affiliate Disclosure:</strong> Some links on this page are affiliate links. If you make a purchase through these links, I may earn a commission at no extra cost to you. I only recommend products I personally use and believe will add value to your creative journey.
            </p>
          </div>
        </div>
      </section>

      <!-- Photography Gear Section -->
      <section id="photography" class="section-padding">
        <div class="container mx-auto container-wide">
          <div class="flex items-center mb-12">
            <span class="text-3xl mr-4">üì∏</span>
            <h2 class="text-display-md">Photography Gear</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {photographyGear.map((item) => (
              <div class="card-2026 p-6">
                <h3 class="text-heading mb-3">{item.name}</h3>
                <p class="text-body mb-4">{item.description}</p>
                <div class="flex justify-between items-center">
                  <span class="font-bold text-accent" style="color: #FF6B35;">{item.price}</span>
                  <a href="#" class="text-accent hover:underline" style="color: #FF6B35;">Check it out ‚Üí</a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Tech Gear Section -->
      <section id="tech" class="section-padding gradient-dark">
        <div class="container mx-auto container-wide">
          <div class="flex items-center mb-12">
            <span class="text-3xl mr-4">üíª</span>
            <h2 class="text-display-md">Tech & Creator Tools</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {techGear.map((item) => (
              <div class="glass-card p-6">
                <h3 class="text-heading mb-3">{item.name}</h3>
                <p class="text-body mb-4">{item.description}</p>
                <div class="flex justify-between items-center">
                  <span class="font-bold text-accent" style="color: #FF6B35;">{item.price}</span>
                  <a href="#" class="text-accent hover:underline" style="color: #FF6B35;">Check it out ‚Üí</a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Bartending Gear Section -->
      <section id="bartending" class="section-padding">
        <div class="container mx-auto container-wide">
          <div class="flex items-center mb-12">
            <span class="text-3xl mr-4">üç∏</span>
            <h2 class="text-display-md">Bartending Essentials</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {bartendingGear.map((item) => (
              <div class="card-2026 p-6">
                <h3 class="text-heading mb-3">{item.name}</h3>
                <p class="text-body mb-4">{item.description}</p>
                <div class="flex justify-between items-center">
                  <span class="font-bold text-accent" style="color: #FF6B35;">{item.price}</span>
                  <a href="#" class="text-accent hover:underline" style="color: #FF6B35;">Check it out ‚Üí</a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Lifestyle Section -->
      <section id="lifestyle" class="section-padding" style="background: rgba(255,107,53,0.1);">
        <div class="container mx-auto container-wide">
          <div class="flex items-center mb-12">
            <span class="text-3xl mr-4">‚≠ê</span>
            <h2 class="text-display-md">Lifestyle Picks</h2>
          </div>

          <div class="glass-card p-8 text-center">
            <p class="text-body-lg mb-8">
              Coming soon! I'm curating a collection of my favorite lifestyle products and recommendations.
            </p>
            <a href="/contact" class="btn-primary">
              Suggest a Category
            </a>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="section-padding" style="background: #FF6B35;">
        <div class="container mx-auto container-narrow text-center">
          <h2 class="text-display-md mb-6 text-white">"The right tools make all the difference."</h2>
          <p class="text-xl mb-8 text-white/90">
            Have questions about any of these recommendations or need personalized advice? Feel free to reach out!
          </p>
          <a href="/contact" class="inline-block bg-white text-[#FF6B35] px-8 py-4 rounded-full font-medium text-lg hover:scale-105 transition-transform">
            Ask Me Anything
          </a>
        </div>
      </section>
    </main>

    <Footer client:load />
    <FloatingButtons client:load />
</BaseLayout>
