---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/navbar';
import Footer from '../../components/footer';
import { getBookings } from '../../lib/db';

export const prerender = false;

const db = (Astro.locals as any).runtime?.env?.DB;
let bookings = [];

if (db) {
  bookings = await getBookings(db);
} else {
  // Mock data for initial UI build
  bookings = [
    { id: 1, client_name: "Jessica Smith", session_type: "Premium Portrait", session_date: "2026-01-15 10:00", location: "ClubsxAI Studio", payment_status: "paid" },
    { id: 2, client_name: "Michael Chen", session_type: "Commercial Product", session_date: "2026-01-18 13:00", location: "Central World", payment_status: "partial" },
    { id: 3, client_name: "Somsak P.", session_type: "Event Coverage", session_date: "2026-02-01 18:00", location: "Siam Kempinski", payment_status: "pending" },
  ];
}

const statusColors: Record<string, string> = {
  'paid': 'bg-green-500/20 text-green-400 border-green-500/50',
  'partial': 'bg-yellow-500/20 text-yellow-400 border-yellow-500/50',
  'pending': 'bg-red-500/20 text-red-400 border-red-500/50',
};
---

<BaseLayout 
  title="Booking Management | ClubsxAI"
  description="Manage your photography sessions and schedule."
>
  <Navbar client:load />

  <main class="min-h-screen pt-24 bg-black text-white p-6">
    <div class="container mx-auto">
      <header class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-12">
        <div>
            <nav class="flex items-center gap-2 text-sm text-zinc-500 mb-2">
                <a href="/admin" class="hover:text-white transition-colors">Dashboard</a>
                <span>/</span>
                <span class="text-white/40">Bookings</span>
            </nav>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-white to-white/40 bg-clip-text text-transparent italic">
                Booking System ðŸ“…
            </h1>
        </div>
        <div class="flex gap-3">
            <button class="px-6 py-2 rounded-xl bg-white text-black text-sm hover:bg-zinc-200 transition-all font-bold">+ New Booking</button>
        </div>
      </header>

      <!-- Bookings Calendar/List -->
      <div class="grid grid-cols-1 gap-6">
        {bookings.map(booking => (
          <div class="glass-card p-6 rounded-3xl border border-white/10 hover:border-[#FF6B35]/30 transition-all group">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
              <div class="flex items-center gap-6">
                <div class="w-16 h-16 rounded-2xl bg-[#FF6B35]/10 flex flex-col items-center justify-center text-[#FF6B35] border border-[#FF6B35]/20">
                  <span class="text-xs uppercase font-bold tracking-tighter">
                    {new Date(booking.session_date).toLocaleString('en-US', { month: 'short' })}
                  </span>
                  <span class="text-2xl font-black">
                    {new Date(booking.session_date).getDate()}
                  </span>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-white group-hover:text-[#FF6B35] transition-colors">
                    {booking.client_name}
                  </h3>
                  <p class="text-zinc-500 text-sm flex items-center gap-2 mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    {new Date(booking.session_date).toLocaleTimeString('th-TH', { hour: '2-digit', minute: '2-digit' })}
                    <span class="text-zinc-700 mx-1">|</span>
                    {booking.session_type}
                  </p>
                </div>
              </div>

              <div class="flex flex-col md:items-end gap-2">
                <div class="flex items-center gap-2 text-zinc-400 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                  {booking.location}
                </div>
                <div class={`px-3 py-1 rounded-full text-[10px] font-bold uppercase border ${statusColors[booking.payment_status]}`}>
                  Payment {booking.payment_status}
                </div>
              </div>

              <div class="flex gap-2">
                <button class="flex-1 md:flex-none px-4 py-2 rounded-xl bg-white/5 border border-white/10 text-xs hover:bg-white/10 transition-colors">Details</button>
                <button class="flex-1 md:flex-none px-4 py-2 rounded-xl bg-white/5 border border-white/10 text-xs hover:bg-[#FF6B35]/20 hover:text-[#FF6B35] transition-colors">Edit</button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Calendar View Placeholder -->
      <div class="mt-12 p-12 rounded-3xl border border-white/5 bg-white/[0.01] text-center">
        <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-500"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
        </div>
        <h3 class="text-lg font-medium text-zinc-400">Interactive Calendar View</h3>
        <p class="text-zinc-600 text-sm mt-1">Full interactive booking calendar integration coming in Phase 7.</p>
      </div>
    </div>
  </main>

  <Footer client:load />
</BaseLayout>
